{
	"compilerOptions": {
		"module": "ESNext", // Use ES modules
		"target": "ESNext", // Target modern JavaScript
		"moduleResolution": "Node", // Resolve modules like Node.js
		"esModuleInterop": true, // Enable compatibility with commonjs modules
		"skipLibCheck": true, // Skip library checks for performance
		"outDir": "./dist", // Output directory for compiled files
		"strict": true, // Enable all strict type-checking options
		"strictNullChecks": true,
		"paths": {
			"@middleware/*": ["./src/middleware/*"],
			"@enums/*": ["./src/enums/*"],
			"@db/*": ["./src/database/*"],
			"@db-table/*": ["./src/database/tables/*"],
			"@utils/*": ["./src/utils/*"],
			"@api/*": ["./src/api/*"],
			"@types/*": ["./src/types/*"],
			"@config": ["./src/config"],
		},
	},
	"include": [
		"src/**/*.ts"
	], // Include all .ts files in the src folder
	"exclude": [
		"node_modules"
	], // Exclude node_modules
}