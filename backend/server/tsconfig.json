{
	"compilerOptions": {
		"module": "ESNext",
		"strict": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"target": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"strictNullChecks": true,
		"paths": {
			"@middleware/*": [
				"./src/middleware/*"
			],
			"@enums/*": [
				"./src/enums/*"
			],
			"@db/*": [
				"./src/database/*"
			],
			"@db-table/*": [
				"./src/database/tables/*"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@api/*": [
				"./src/api/*"
			],
			"@config": [
				"./src/config"
			],
		},
		"baseUrl": ".",
	},
	"include": [
		"./src",
		"./src/types/*.d.ts",
		"../../shared/types",
	],
	"exclude": [
		"node_modules"
	],
}