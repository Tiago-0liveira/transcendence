{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"skipLibCheck": true,
		"strict": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@component/*": [
				"src/components/*"
			],
			"@page/*": [
				"src/pages/*"
			],
			"@types/*": [
				"types/*"
			]
		},
		"typeRoots": [
			"./types",
			"../shared/types",
			"./node_modules/@types"
		],
		"types": [
			"vite/client"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"types/**/*.ts",
		"types/**/*.d.ts",
		"../shared/types/*.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}